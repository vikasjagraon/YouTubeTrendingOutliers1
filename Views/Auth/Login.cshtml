@model YouTubeTrendingOutliers.Models.UserLogin
@{
    Layout = null;
    ViewData["Title"] = "Login";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>ViewStats - Login</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;500;600;700&display=swap" rel="stylesheet" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body class="d-flex justify-content-center align-items-center">
    <div class="login-container">
        <div class="brand-logo">
            <div class="logo-circle">
                <span class="logo-letter">WB</span>
            </div>
            <span class="logo-text">WhiteBoard Tools</span>
        </div>

        <h2>Welcome Back</h2>

        <form method="post">
            <div class="mb-3">
                <input asp-for="Username" class="form-control" placeholder="Email" />
                <span asp-validation-for="Username" class="validation-error"></span>
            </div>

            <div class="mb-3">
                <input asp-for="Password" type="password" class="form-control" placeholder="Password" />
                <span asp-validation-for="Password" class="validation-error"></span>
            </div>

            @if (ViewBag.Error != null)
            {
                <div class="alert mb-4">@ViewBag.Error</div>
            }

            <button type="submit" class="btn-login">Login</button>
        </form>
        <footer class="d-flex justify-content-center align-items-center">
            &copy;- YouTube Topic Explorer | Built with 💜
        </footer>
        @* <div class="extra-links">
        <p><a href="#">Forgot password?</a></p>
        <p class="mt-2">Don't have an account? <a href="#"><strong>Sign up</strong></a></p>
        </div> *@
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>