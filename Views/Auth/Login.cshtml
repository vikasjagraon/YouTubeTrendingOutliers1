@model YouTubeTrendingOutliers.Models.UserLogin
@{
    Layout = null;
    ViewData["Title"] = "Login";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>Login</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />

    <style>
        body {
            background: linear-gradient(135deg, #4e54c8, #8f94fb);
            height: 100vh;
            margin: 0;
            font-family: 'Segoe UI', sans-serif;
            display: flex;
            justify-content: center;
            align-items: center;
        }

        .login-container {
            background-color: #fff;
            border-radius: 12px;
            padding: 3rem 2.5rem;
            max-width: 400px;
            width: 100%;
            box-shadow: 0 8px 24px rgba(0, 0, 0, 0.15);
        }

            .login-container h2 {
                font-weight: 700;
                text-align: center;
                margin-bottom: 2rem;
            }

        .form-control {
            border: none;
            border-bottom: 1.5px solid #ccc;
            border-radius: 0;
            box-shadow: none;
            padding-left: 0;
            background-color: transparent;
        }

            .form-control:focus {
                border-color: #6a82fb;
                box-shadow: none;
                background-color: transparent;
            }

        .btn-gradient {
            background: linear-gradient(to right, #4facfe, #6a82fb);
            border: none;
            border-radius: 6px;
            color: white;
            font-weight: 600;
            padding: 0.6rem;
            width: 100%;
            transition: background 0.3s ease;
        }

            .btn-gradient:hover {
                background: linear-gradient(to right, #6a82fb, #4facfe);
            }

        .extra-links {
            margin-top: 1rem;
            text-align: center;
            font-size: 0.9rem;
        }

            .extra-links a {
                text-decoration: none;
                color: #4e54c8;
                font-weight: 500;
            }

                .extra-links a:hover {
                    text-decoration: underline;
                }

        .alert {
            background-color: rgba(255, 0, 0, 0.1);
            color: #b22222;
            font-size: 0.9rem;
            border: none;
        }
    </style>
</head>
<body>
    <div class="login-container">
        <h2>Login</h2>

        <form method="post">
            <div class="mb-4">
                <input asp-for="Username" class="form-control" placeholder="Email" />
                <span asp-validation-for="Username" class="text-danger small"></span>
            </div>

            <div class="mb-4">
                <input asp-for="Password" type="password" class="form-control" placeholder="Password" />
                <span asp-validation-for="Password" class="text-danger small"></span>
            </div>

            @if (ViewBag.Error != null)
            {
                <div class="alert mt-2">@ViewBag.Error</div>
            }

            <button type="submit" class="btn btn-gradient mt-2">Login</button>
        </form>

        @* <div class="extra-links mt-4">
            <p><a href="#">Forgot <strong>Password?</strong></a></p>
            <p>Don't have an account? <a href="#"><strong>Sign up</strong></a></p>
        </div> *@
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
