@{
    ViewData["Title"] = "YouTube Topic Explorer";
    var videos = ViewBag.Videos as List<YouTubeSearchItem>;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"]</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Pacifico&family=Quicksand:wght@400;600&display=swap" rel="stylesheet">

    <style>
        body {
            background: url('https://cdn.pixabay.com/photo/2020/10/04/08/52/mountains-5624310_1280.jpg') no-repeat center center fixed;
            background-size: cover;
            background-attachment: fixed;
            font-family: 'Quicksand', sans-serif;
            color: #333;
            margin: 0;
        }

        .wrapper {
            backdrop-filter: blur(8px);
            background-color: rgba(255, 255, 255, 0.8);
            border-radius: 20px;
            max-width: 1000px;
            margin: 60px auto;
            padding: 40px;
            box-shadow: 0 20px 60px rgba(0, 0, 0, 0.1);
        }

        h1 {
            font-family: 'Pacifico', cursive;
            font-size: 2.8rem;
            text-align: center;
            color: #325f50;
            margin-bottom: 30px;
            text-shadow: 1px 1px 4px rgba(173, 214, 194, 0.6);
        }

        label {
            font-weight: 600;
            color: #3d6956;
        }

        .btn-theme {
            background-color: #77b6a0;
            border: none;
            font-weight: bold;
        }

            .btn-theme:hover {
                background-color: #639e89;
            }

        .video-card {
            display: flex;
            background-color: #f7fdfb;
            border-radius: 14px;
            overflow: hidden;
            margin-bottom: 20px;
            box-shadow: 0 5px 15px rgba(0, 0, 0, 0.08);
            transition: all 0.3s ease-in-out;
        }

            .video-card:hover {
                transform: scale(1.01);
                box-shadow: 0 10px 25px rgba(0, 0, 0, 0.15);
            }

            .video-card img {
                width: 200px;
                object-fit: cover;
            }

        .video-info {
            padding: 15px;
            flex: 1;
        }

            .video-info h5 {
                color: #2d5646;
                margin-bottom: 10px;
            }

        footer {
            text-align: center;
            color: #5c6f65;
            margin: 50px auto 20px;
            font-size: 0.85rem;
        }
    </style>
</head>
<body>
    <div class="wrapper">
        <h1>🌿 YouTube Topic Explorer</h1>

        <form method="post" class="mb-4">
            <div class="mb-3">
                <label>🔍 Search Topic</label>
                <input type="text" name="topic" class="form-control" placeholder="e.g. Ghibli music, Coding tutorials" required />
            </div>
            <div class="mb-3">
                <label>🌍 Region Code</label>
                <input type="text" name="regionCode" class="form-control" placeholder="e.g. US, JP, IN" required />
            </div>
            <button type="submit" class="btn btn-theme w-100 mt-3">✨ Fetch Videos</button>
        </form>

        @if (ViewBag.Error != null)
        {
            <div class="alert alert-danger">@ViewBag.Error</div>
        }

        @if (ViewBag.Videos != null && (ViewBag.Videos as List<VideoItem>).Count > 0)
        {
            <h4 class="mt-4">📈 Top 50 Outlier Videos</h4>
            @foreach (var video in (List<VideoItem>)ViewBag.Videos)
            {
                <div class="video-card">
                    <img src="@video.Snippet.Thumbnails?.Medium?.Url" />
                    <div class="video-info">
                        <h5>@video.Snippet.Title</h5>
                        <p><strong>Views:</strong> @video.Statistics?.ViewCount</p>
                        <p><strong>Channel:</strong> @video.Snippet.ChannelTitle</p>
                        <a href="https://www.youtube.com/watch?v=@video.Id" target="_blank" class="btn btn-sm btn-outline-primary mt-2">📺 Watch</a>
                    </div>
                </div>
            }

        }


    </div>

    <footer>
        &copy; @DateTime.Now.Year YouTube Topic Explorer 🌈 | Ghibli-styled magic by you 🍃
    </footer>
</body>
</html>
